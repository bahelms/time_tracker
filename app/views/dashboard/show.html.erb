<div class="row-fluid">
  <div class="col-xs-8 col-xs-offset-2">
    <%= text_field_tag "task", nil, placeholder: "Enter task name here", 
      id: "task_field", role: "task_field" %>
    <%= button_tag "Start", class: "btn btn-primary", role: "stopwatch", 
      data: { status: false } %>
    <%= label_tag "timer", "0 sec", role: "clock" %>
  </div>
</div>
