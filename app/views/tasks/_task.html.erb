<div class="row task well" data-id=<%= task.id %> role="tasks">
  <div class="col-xs-6">
    Task: <%= task.name %>
  </div>

  <div class="col-xs-2 project_name">
    <%= task.project_name %>
  </div>

  <div class="col-xs-1 task_duration" role="task_duration">
    <span role="duration_value"><%= task.duration_formatted %></span>
    <%= text_field_tag "task_duration", "#{task.duration_in_minutes} min", 
      role: "task_duration_field", id: "task_duration_field" %>
  </div>

  <div class="col-xs-3 time_span">
    <small><%= task.time_span %></small>
  </div>
</div>
