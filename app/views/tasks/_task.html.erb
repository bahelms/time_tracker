<div class="row task" data-id=<%= task.id %> role="tasks">
  <div class="col-xs-7">
    Task: <%= task.name %>
  </div>
  <div class="col-xs-2" id="task_duration">
    <%= task.duration_formatted %>
  </div>
  <div class="col-xs-3" id="time_span">
    <small><%= task.time_span %></small>
  </div>
</div>
